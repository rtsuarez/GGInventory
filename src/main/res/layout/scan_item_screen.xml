<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/SalesTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="@string/scan_item"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#EDBD01"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:background="#000"
        android:text="@string/qty"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:background="#000"
        android:text="@string/type"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:background="#000"
        android:text="@string/notes"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:background="#000"
        android:text="@string/details"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SalesTypeText"
        android:background="#000"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/ScanDiscriptionSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ScanRetail"
        android:layout_alignLeft="@+id/ScanNotesSpinner"
        android:layout_alignRight="@+id/ScanNotesSpinner"
        android:layout_alignStart="@+id/ScanNotesSpinner"
        android:layout_below="@+id/ScanNotesSpinner"
        android:background="#fff"
        android:entries="@array/discription"
        android:layout_marginBottom="2dp" />

    <EditText
        android:id="@+id/ScanNotesSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/ScanTypeSpinner"
        android:layout_alignRight="@+id/ScanTypeSpinner"
        android:layout_alignStart="@+id/ScanTypeSpinner"
        android:layout_below="@+id/ScanTypeSpinner"
        android:background="#fff"
        android:entries="@array/notes"
        android:layout_marginBottom="2dp" />

    <EditText
        android:id="@+id/ScanTypeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/ScanQtySpinner"
        android:layout_alignRight="@+id/ScanQtySpinner"
        android:layout_alignStart="@+id/ScanQtySpinner"
        android:layout_below="@+id/ScanQtySpinner"
        android:background="#fff"
        android:entries="@array/type"
        android:layout_marginBottom="2dp" />

    <EditText
        android:id="@+id/ScanQtySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/autoCompleteTextView1"
        android:layout_alignRight="@+id/autoCompleteTextView1"
        android:layout_alignStart="@+id/autoCompleteTextView1"
        android:layout_alignTop="@+id/textView3"
        android:background="#fff"
        android:entries="@array/quantity"
        android:layout_marginBottom="2dp" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/SalesTypeText"
        android:layout_toRightOf="@+id/ScanLandscape"
        android:background="#fff"
        android:ems="10"
        android:paddingLeft="10dp"
        android:layout_marginBottom="2dp">

        <requestFocus />
    </AutoCompleteTextView>

    <TextView
        android:id="@+id/ScanRetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:background="#000"
        android:text="@string/retail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ScanLandscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ScanRetail"
        android:layout_below="@+id/ScanRetail"
        android:background="#000"
        android:paddingRight="2dp"
        android:text="@string/landscape"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ScanLandscape"
        android:layout_alignRight="@+id/autoCompleteTextView1"
        android:layout_below="@+id/ScanLandscape"
        android:background="@drawable/green_button"
        android:paddingTop="2dp"
        android:text="Update"
        android:layout_marginBottom="2dp" />

    <EditText
        android:id="@+id/ScanRetailSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ScanLandscape"
        android:layout_alignLeft="@+id/ScanDiscriptionSpinner"
        android:layout_alignRight="@+id/autoCompleteTextView1"
        android:layout_alignStart="@+id/ScanDiscriptionSpinner"
        android:layout_below="@+id/textView6"
        android:background="#fff"
        android:entries="@array/quantity"
        android:layout_marginBottom="2dp" />

    <EditText
        android:id="@+id/ScanLandscapeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/updateButton"
        android:layout_alignRight="@+id/autoCompleteTextView1"
        android:layout_alignTop="@+id/ScanLandscape"
        android:layout_toRightOf="@+id/ScanLandscape"
        android:background="#fff"
        android:entries="@array/quantity"
        android:layout_marginBottom="2dp" />

    <Button
        android:layout_weight="1"
        android:id="@+id/ScanItemPrimaryPicture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/updateButton"
        android:layout_alignRight="@+id/SalesTypeText"
        android:layout_below="@+id/updateButton"
        android:background="@drawable/blue_button"
        android:paddingTop="2dp"
        android:text="Primary Picture"
        android:layout_marginRight="2dp" />

    <Button
        android:layout_weight="1"

        android:id="@+id/ScanItemSecondaryPicture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ScanItemPrimaryPicture"
        android:layout_alignRight="@+id/updateButton"
        android:layout_below="@+id/updateButton"
        android:layout_toRightOf="@+id/SalesTypeText"
        android:background="@drawable/purple_button"
        android:paddingTop="2dp"
        android:text="Secondary Picture" />

</RelativeLayout>